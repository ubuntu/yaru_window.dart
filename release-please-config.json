      "monorepo-tags": true
    },
    "packages/yaru_window_linux": {
      "monorepo-tags": true
    },
    "packages/yaru_window_manager": {
      "monorepo-tags": true
    },
    "packages/yaru_window_platform_interface": {
      "monorepo-tags": true
    },
    "packages/yaru_window_web": {
      "monorepo-tags": true
    }
  }
}
